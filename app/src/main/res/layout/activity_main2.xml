<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <com.hanks.passcodeview.PasscodeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/passcode_view"
        app:correctStateColor="@color/green_light"
        app:wrongStateColor="@color/red_light"
        app:numberTextColor="@color/darker_grey"
        app:passcodeViewType="set_passcode"
        app:firstInputTip="Masukkan PassCode Anda 4 Digit">

    </com.hanks.passcodeview.PasscodeView>

</RelativeLayout>